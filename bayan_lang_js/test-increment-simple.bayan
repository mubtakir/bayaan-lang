// اختبار عوامل ++ و --

متغير س = 0;
اطبع("س قبل:", س);
س++;
اطبع("س بعد ++:", س);

متغير ص = 10;
اطبع("ص قبل:", ص);
ص--;
اطبع("ص بعد --:", ص);

// حلقة for مع ++
اطبع("حلقة for:");
لكل (متغير ط = 0; ط < 5; ط++) {
  اطبع("ط =", ط);
}

// حلقة while مع ++
اطبع("حلقة while:");
متغير ع = 0;
بينما (ع < 3) {
  اطبع("ع =", ع);
  ع++;
}

اطبع("✅ نجحت جميع الاختبارات!");

