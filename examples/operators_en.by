hybrid {
  entity Ahmed {
    "properties": {"x": {"type": "numeric", "value": 0.0}},
    "actions": {
      "go": {"effects": [{"on": "x", "formula": "value + 3*sensitivity"}]}
    }
  }

  # Go wrapper (calls perform("go", ...))
  Go(["Ahmed.0.5"])    # x += 3*0.5 = 1.5
}

# Query
query property("Ahmed", "x", ?X).

